<Window x:Class="Wpf_StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_StackPanel"
        mc:Ignorable="d"
        Title="StackPanel" Height="250" Width="400">
    <ScrollViewer>
    <StackPanel>
        
        <Button>Button 1</Button>
        <Button>Button 2</Button>
        <Button>Button 3</Button>
        <Button>Button 4</Button>
        <Button>Button 5</Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="5 5 5 5" HorizontalAlignment="Center">Button 5</Button >
            <Button Margin="5 5 5 5" VerticalAlignment="Bottom">Button 6</Button>
            <Button Margin="5 5 5 5">Button 7</Button>
            <Button Margin="5 5 5 5">Button 8</Button>
            <Button Margin="5 5 5 5">Button 9</Button>
            <Button Margin="5 5 5 5">Button 10</Button>
            <Button Margin="5 5 5 5">Button 11</Button>
            <Button Margin="5 5 5 5">Button 12</Button>
        </StackPanel>
        
    </StackPanel>
    </ScrollViewer>
</Window>
