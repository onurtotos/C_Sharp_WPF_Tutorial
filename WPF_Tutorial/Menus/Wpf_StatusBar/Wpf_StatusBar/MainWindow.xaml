<Window x:Class="Wpf_StatusBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_StatusBar"
        mc:Ignorable="d"
        Title="Status-ProgressBar" Height="250" Width="530">
    <DockPanel LastChildFill="False">

        <Button DockPanel.Dock="Top" Click="Button_Click">
            Increase by 10
        </Button>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="mySB">
                Loading..
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar x:Name="myPB" Width="100" Height="15" Value="0"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
