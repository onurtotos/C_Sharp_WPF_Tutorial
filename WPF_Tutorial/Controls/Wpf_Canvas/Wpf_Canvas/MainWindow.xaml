<Window x:Class="Wpf_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Canvas"
        mc:Ignorable="d"
        Title="Canvas" Height="400" Width="400">
    <Canvas Opacity="0.5">

        <Button Canvas.Left="5"> Button 1</Button>
        <Button Canvas.Right="5"> Button 2</Button>
        <Ellipse Canvas.Bottom="5" Canvas.Left="5" Fill="Aqua" Width="100" Height="100"> </Ellipse>
        <Rectangle Panel.ZIndex="1" Canvas.Bottom="5" Canvas.Right="5" Fill="Chartreuse" Width="100" Height="100"> </Rectangle>
        <Rectangle Panel.ZIndex="0" Canvas.Bottom="80" Canvas.Right="50" Fill="Red" Width="100" Height="100"></Rectangle>
    </Canvas>
</Window>
