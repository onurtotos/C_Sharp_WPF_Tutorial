<Window x:Class="Wpf_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Label"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <Label Margin="20,20,20,20" BorderBrush="Aquamarine" BorderThickness="2">

            <StackPanel Orientation="Horizontal">

                <Image Width="45" Source="https://img.freepik.com/free-vector/new-message-concept-landing-page_52683-26980.jpg?w=740;t=st=1684311794~exp=1684312394~hmac=c771f841470ec675bb108ef6327642a48b667bc02ba8bb56211c7861fcccba43"/>
                <AccessText FontSize="25" Text="Message" VerticalAlignment="Center" />
            </StackPanel>
            
        </Label>

        <TextBox Focusable="True" FontSize="32" Margin="20,20,20,22" ></TextBox>

        
    </StackPanel>
</Window>
