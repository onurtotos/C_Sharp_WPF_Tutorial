<Window x:Class="Wpf_CatYears_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_CatYears_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">

            <TextBlock Text="How old is your cat?(years)" FontSize="20"/>

            <TextBox x:Name="InputCatAge"
                     Width="100"
                     Margin="5 0 0 0"
                     TextAlignment="Center"
                     FontSize="16"
                     KeyDown="InputCatAge_KeyDown"></TextBox>

        </StackPanel>

        <TextBlock x:Name="ResultTextBlock"
                   Text="Your Cat is"
                   FontSize="16"/>
        <Image Source="https://idsb.tmgrup.com.tr/ly/uploads/images/2021/09/08/142774.jpg"/>
    </StackPanel>
</Window>
