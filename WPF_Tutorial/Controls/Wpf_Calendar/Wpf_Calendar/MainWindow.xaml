<Window x:Class="Wpf_Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Calendar" xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Calendar" Height="750" Width="750">
    <StackPanel>
        <Viewbox Stretch="Uniform">
            <Calendar x:Name="myCalendar" Width="300"
                      SelectedDate="01.01.2023" 
                      SelectedDatesChanged="myCalendar_SelectedDatesChanged"
                      DisplayMode="Month"
                     Margin="5" >

                <Calendar.BlackoutDates>
                    <CalendarDateRange Start="05.19.2023" End="05.23.2023"></CalendarDateRange>
                </Calendar.BlackoutDates>

                
            </Calendar>
            
        </Viewbox>
        <TextBlock x:Name="myTextblock"></TextBlock>

        
        
    </StackPanel>
</Window>
